<Window x:Class="Wallet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallet"
        mc:Ignorable="d"
        Title="Мои заметки" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView x:Name="ListViewArticles" Grid.Row="1" MouseDoubleClick="lv_MouseDoubleClick"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <Button Content="Добавить" Margin="5" Click="Click_AddArticle"/>
            <Button Content="Удалить" Margin="5" Click="Click_DeleteArticle"/>
        </StackPanel>
    </Grid>
    
</Window>
