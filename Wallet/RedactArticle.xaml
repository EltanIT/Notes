<Window x:Class="Wallet.RedactArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallet"
        mc:Ignorable="d"
        Title="Редактирование заметки" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Название заметки:" Margin="10"/>
            <Label Name="l_Name" Content="ffdafdafsa" Margin="0,10,10,10"/>
        </StackPanel >
        <TextBox Name="tb_Description" Grid.Row="1" Margin="10" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button Grid.Row="2" Content="Сохранить" Margin="10" HorizontalAlignment="Right" Click="Click_saveRedact"/>
    </Grid>
</Window>
