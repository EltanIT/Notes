<Window x:Class="Wallet.CreateArticle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallet"
        mc:Ignorable="d"
        Title="Новая заметка" Height="150" Width="310">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <Label Content="Название новой заметки:" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" Grid.Row="4">
            <Button Content="Создать" Margin="5" Click="Click_CreateArticle"/>
            <Button Content="Отмена" Margin="5" Click="Click_CloseWindow"/>
        </StackPanel>
    </Grid>
</Window>
